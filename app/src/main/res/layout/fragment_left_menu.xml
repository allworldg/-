<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color_black">
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/right_slide_close"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:scaleType="center"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:src="@drawable/fork"/>
        <ImageView
            android:id="@+id/search"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:src="@drawable/search_white"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/logo_iv"
        android:layout_below="@id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15.0dip"
        android:scaleType="centerCrop"
        android:src="@drawable/youzhuangxiang" />

    <RelativeLayout
        android:id="@+id/title_logo_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_iv"
        android:layout_marginTop="38.0dip">

        <View
            android:layout_width="91.0dip"
            android:layout_height="0.5dip"
            android:layout_centerVertical="true"
            android:background="#ff676767" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/liaojiezhuangxiang" />

        <View
            android:layout_width="91.0dip"
            android:layout_height="0.5dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#ff676767" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/column_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_logo_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59.0dip"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_page_tv"
            style="@style/MenuColunmStyle"
            android:text="首   页" />

        <TextView
            android:id="@+id/view_tv"
            style="@style/MenuColunmStyle"
            android:layout_marginTop="18.0dip"
            android:text="景   点" />

        <TextView
            android:id="@+id/culture_tv"
            style="@style/MenuColunmStyle"
            android:layout_marginTop="18.0dip"
            android:text="文   化" />

        <TextView
            android:id="@+id/food_tv"
            style="@style/MenuColunmStyle"
            android:layout_marginTop="18.0dip"
            android:text="美   食" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/column_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50.0dip"
        android:text="Powered by 游壮乡"
        android:textColor="#ff888888"
        android:textSize="7.0sp" />


</RelativeLayout>
