<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color_black"
    tools:context=".view.activity.RegisterActivity">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/right_slide_close"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/fork" />

        <TextView
            android:id="@+id/right_login"
            style="@style/MenuColunmStyle"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="注   册"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar">

        <EditText
            android:id="@+id/et_registUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/yuanjiaobiankuang"
            android:hint="请输入账号"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/et_registNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_registUserName"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/yuanjiaobiankuang"
            android:hint="请输入用户名"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_registNickName"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/yuanjiaobiankuang"
            android:hint="请输入密码"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/btn_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_login_password"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/yuanjiaobiankuang_orange"
            android:gravity="center"
            android:text="注册"
            app:backgroundTint="@null" />
    </RelativeLayout>


</RelativeLayout>
