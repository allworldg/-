<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseAppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppThemeLaunch" parent="AppTheme"></style>

    <style name="MenuColunmStyle">
        <item name="android:textSize">40.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--    <style name="AppTheme.Splash">-->
    <!--        <item name="android:windowFullscreen">false</item>-->
    <!--        <item name="android:windowBackground">@drawable/welcome_default2</item>-->
    <!--    </style>-->
    <style name="SettingMenuTvStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/setting_act_textcolor_common</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="SettingMenuRightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="LunarDialg" parent="AlertDialog.AppCompat.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="line_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:background">@color/theme_bg_color_black</item>
    </style>

    <style name="item_textleft">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center|start</item>
    </style>

    <style name="item_textright">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">160dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>


    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

</resources>
